{
  "name": "@datashelf/database",
  "version": "1.0.0",
  "description": "Database utilities and migrations for DataShelf",
  "type": "module",
  "main": "utils/connection.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "migrate": "node dist/migrate.js migrate",
    "migrate:deploy": "node dist/deploy-migrations.js",
    "seed": "node dist/migrate.js seed",
    "db:status": "node dist/migrate.js status",
    "db:reset": "node dist/migrate.js reset",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0"
  },
  "exports": {
    "./connection": "./utils/connection.js",
    "./operations": "./utils/operations.js",
    "./migrate": "./migrate.js"
  }
}